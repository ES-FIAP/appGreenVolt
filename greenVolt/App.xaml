<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:greenVolt"
             x:Class="greenVolt.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Tab">
                <Setter Property="Shell.TabBarBackgroundColor" Value="#FFFFFFCC" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="Gray" />
                <Setter Property="Shell.TabBarDisabledColor" Value="Green" />
            </Style>

            <Style TargetType="ShellItem">
                    <Setter Property="Shell.TabBarBackgroundColor" Value="Green" />
                    <Setter Property="Shell.ForegroundColor" Value="Green" />
                    <Setter Property="Shell.UnselectedColor" Value="Black" />
            </Style>
        </ResourceDictionary>
        
    </Application.Resources>
    
</Application>
